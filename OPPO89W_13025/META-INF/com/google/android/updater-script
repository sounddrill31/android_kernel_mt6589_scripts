(getprop("ro.product.device") == "R819" || getprop("ro.build.product") == "R819") || abort("This package is for \"R819\" devices
this is a \"" + getprop("ro.product.device") + "\".");
ui_print("============================================");
ui_print("|        Custom Kernel for Oppo R819       |");
ui_print("|       Based on android_kernel_mt6589     |");
ui_print("|          Compiled by Dr-Shadow           |");
ui_print("============================================");
show_progress(0.200000, 10);
mount("ext4", "EMMC", "/emmc@android", "/system");
package_extract_dir("system", "/system");
set_perm_recursive(0, 0, 0755, 0644, "/system/lib/modules");
set_perm_recursive(0, 0, 0777, 0777, "/system/etc/init.d");
unmount("/system");
package_extract_file("boot.img", "/dev/bootimg");
show_progress(0.100000, 0);
unmount("/system");
ui_print("");
ui_print("");
